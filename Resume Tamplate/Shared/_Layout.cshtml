<body>
    <!-- container section start -->
    <section id="container" class="">


        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="#" class="logo">Deshboard</a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul class="nav top-menu">
                    <li>
                        <form class="navbar-form">
                            <input class="form-control" placeholder="Search" type="text">
                        </form>
                    </li>
                </ul>
                <!--  search form end -->
            </div>

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">


                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="~/Content/AdminTemplates/img/avatar1_small.png">
                            </span>
                            <span class="username">User</span>
                            <b class="caret"></b>
                        </a>

                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            @if (Convert.ToInt32(Session["UserTypeID"]) == 1) // Employee
                            {
                                <li class="eborder-top">
                                    @Html.ActionLink("My Profile", "EmployeeProfile", "EmployeeDeshboard")
                                </li>
                            }
                            @if (Convert.ToInt32(Session["UserTypeID"]) == 1)
                            {
                                <li>
                                    @Html.ActionLink("My Resume", "CheckCV", "Resume")
                                </li>
                            }

                            <li>
                                @Html.ActionLink("Log Out","Logout" ,"EmployeeDeshboard") 
                            </li>

                            <li>
                                <a href="#"><i class="icon_key_alt"></i>Recruitment System</a>
                            </li>
                        </ul>

                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" href="#">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    @if (Convert.ToInt32(Session["UserTypeID"]) == 3) // Admin
                                        {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="icon_document_alt"></i>
                                <span>Configuration</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">

                                <li>@Html.ActionLink("User Type", "Index", "UserTypes")</li>
                                <li>@Html.ActionLink("Users", "Index", "Usersses")</li>
                            </ul>
                        </li>
                    }
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_document_alt"></i>
                            <span>Jobs</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            @if (Convert.ToInt32(Session["UserTypeID"]) == 1) // Employee
                                    {
                                <li>@Html.ActionLink("All Jobs", "GetAvaliableJobsList", "EmployeeDeshboard")</li>
                                <li>@Html.ActionLink("Already Apply", "GetAlreadyJobsList", "EmployeeDeshboard")</li>
                                <li>@Html.ActionLink("Shortlist", "GetShortlistJobsList", "EmployeeDeshboard")</li>
                                <li>@Html.ActionLink("Selected Jobs", "GetSelectedJobsList", "EmployeeDeshboard")</li>
                            }

                                    @if (Convert.ToInt32(Session["UserTypeID"]) == 3) // Admin
                                    {
                                <li>@Html.ActionLink("Job Types", "Index", "JobCategories")</li>
                                <li>@Html.ActionLink("Jobs Registration", "Index", "Jobs")</li>
                                <li>@Html.ActionLink("All Jobs", "Index", "AvaliableJobs")</li>
                                <li>@Html.ActionLink("Employee(Apply)", "Index", "ApplyJobs")</li>
                                    }
                        </ul>
                    </li>

                    @if (Convert.ToInt32(Session["UserTypeID"]) == 3) // Admin
                                    {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="icon_document_alt"></i>
                                <span>Employees</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">

                                <li>@Html.ActionLink("All Employees", "Index", "Employees")</li>
                                <li>@Html.ActionLink("Employee(Apply)", "Index", "ApplyJobs")</li>

                            </ul>
                        </li>
                    }

                                @if (Convert.ToInt32(Session["UserTypeID"]) == 3) // Admin
                                {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="icon_document_alt"></i>
                                <span>Events</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li>@Html.ActionLink("All Events", "Index", "Events")</li>
                            </ul>
                        </li>
                    }
                    @if (Convert.ToInt32(Session["UserTypeID"]) == 1) // Employee
                                {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="icon_desktop"></i>
                                <span>My Resume</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li>@Html.ActionLink("Education", "Education", "Resume", null, new { @class=""})</li>
                                <li>@Html.ActionLink("Experience", "WorkExperience", "Resume", null, new { @class = "" })</li>
                                <li>@Html.ActionLink("Skills", "SkiCerfLang", "Resume", null, new { @class = "" })</li>
                                 
                                 
                            </ul>
                        </li>
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <section id="main-content">
            <br>
            <br>

            @RenderBody()
            <hr />



            <div class="text-right">
                <div class="credits">
                </div>
            </div>
        </section>
        <!--main content end-->
    </section>
