@model DatabaseAccess.EmployeeSalaryTable

@{
    ViewBag.Title = "Delete";
}
<h3 class="text-danger">確定要刪除嗎?</h3>
<div>
    <h4>員工薪資</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            月數
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            月薪
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SalaryMonth)
        </dd>

        <dt>
            年薪
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SalaryYear)
        </dd>

        <dt>
            發薪日
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SalaryDate)
        </dd>

        <dt>
            補充說明
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

        <dt>
            登入人員
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTable.FullName)
        </dd>

        <dt>
            員工姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffTable.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
</div>
    }
</div>
