@model IEnumerable<DatabaseAccess.ProgrameSessionTable>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">系上課程</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>
                            學年度
                        </th>
                        <th>
                            科系
                        </th>
                        <th>
                            課程
                        </th>
                        <th>
                            課程時間
                        </th>
                        <th>
                            描述
                        </th>
                        <th>
                            登入人員
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.SessionTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProgrameTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Details)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserTable.FullName)
                            </td>
                            <td>
                                @Html.ActionLink("編輯", "Edit", new { id = item.ProgrameSessionID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("內容", "Details", new { id = item.ProgrameSessionID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("刪除", "Delete", new { id = item.ProgrameSessionID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
