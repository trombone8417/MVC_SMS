@model DatabaseAccess.AnnualTable

@{
    ViewBag.Title = "Promote Fee";
}
<h3 class="text-danger">確定要刪除嗎?</h3>
<div>
    <h4>學雜費</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            學/雜費
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            學分
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgrameTable.Name)
        </dd>
        <dt>
            內容
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            費用
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fees)
        </dd>

        <dt>
            狀態
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>



        <dt>
            姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTable.FullName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-danger" />
            @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
