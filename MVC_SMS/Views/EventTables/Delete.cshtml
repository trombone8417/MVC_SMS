@model DatabaseAccess.EventTable

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-danger">確定要刪除嗎?</h3>

<div>
    <h4>活動</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            活動
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventTitle)
        </dd>

        <dt>
            日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventDate)
        </dd>

        <dt>
            地點
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            詳細內容
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            登入人員
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTable.FullName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-danger" />
            @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
