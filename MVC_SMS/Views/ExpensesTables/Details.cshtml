@model DatabaseAccess.ExpensesTable

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>繳費時間</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            繳費日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpensesDate)
        </dd>

        <dt>
            金額
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            原因
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reason)
        </dd>

        <dt>
            繳費方式
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpenseTypeTable.Name)
        </dd>

        <dt>
            登入人員
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTable.FullName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ExpensesID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
</p>
