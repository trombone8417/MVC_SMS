@model MVC_SMS.Models.MailModel

@{ 
    //不要顯示側邊面板
    ViewBag.Title = "SendEmail";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>校園資訊管理系統</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminTemplate/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/AdminTemplate/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg- col-md-5">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Send Email</h1>
                            </div>
                            @*寄信失敗，顯示錯誤訊息*@
                            <h5 class="alert-danger">@ViewBag.messageError</h5>
                            @*寄信成功，顯示寄出訊息*@
                            <h5 class="alert-success">@ViewBag.messageSuccess</h5>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label>To</label>
                                    @Html.TextBoxFor(m => m.To, new { @class = "form-control form-control-user" })
                                </div>
                                <div class="form-group">
                                    <label>Subject</label>
                                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-user" })
                                </div>
                                <div class="form-group">
                                    <label>Body</label>
                                    @Html.TextAreaFor(m => m.Body, new { @class = "form-control form-control-user" })
                                </div>
                                <input type="submit" value="Send" class="btn btn-primary btn-user btn-block" />
                                <hr>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/AdminTemplate/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminTemplate/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/AdminTemplate/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/AdminTemplate/js/sb-admin-2.min.js"></script>

</body>

</html>
