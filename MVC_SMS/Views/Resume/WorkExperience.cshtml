
@{
    ViewBag.Title = "Work Experience";
}
@{ Html.RenderAction("WorkExperiencePartial", "Resume");}


<script type="text/javascript">


        $('#AddOrUpdateExperience').on('click', function () {
            var serializeModel = {
                EmployeeEducationID: $('#EmployeeWorkExperienceID').val(),
                Company: $('#Company').val(),
                Title: $('#Title').val(),
                Country: $('#Country').val(),
                FromYear: $('#FromYear').val(),
                ToYear: $('#ToYear').val(),
                Description: $('#Description').val(),
            };
            console.log(JSON.stringify(serializeModel));
            $.ajax({
                url: '@Url.Action("AddOrUpdateExperience","Resume")',
                type: 'POST',
                data: { workExperience: serializeModel },
                success: function (response) {
                    alert(response.data);
                },
                error: function (error) {
                    alert(error.data);
                }
            });
        });
</script>

    @Scripts.Render("~/bundles/jqueryval");
