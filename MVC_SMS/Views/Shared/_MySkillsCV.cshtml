@model IQueryable<MVC_SMS.ViewModels.EmployeeSkillTableVM>

<div class="card mb-4 shadow border-danger">
    <div class="card-header">
        技能
    </div>

    <div class="card-body">
        <div class="">
            <table class="table table-hover" style="font-size: 13px;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Skills</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @if (Model != null && Model.Any())
                    {
                        foreach (var skill in Model)
                        {
                            <tr>
                                <td> @count </td>
                                <td>@skill.SkillName</td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>

            </table>
        </div> <!--END BOX-->
    </div> <!-- END PANEL BODY -->
</div> <!-- END PANEL DEFAULT SKILLS -->
