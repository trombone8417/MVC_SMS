@model  MVC_SMS.ViewModels.EmployeeCertificationTableVM

<div class="card mb-4 shadow">
    <div class="card-header">
        證照
    </div>
    <div class="card-body">
        <form>
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CertificationName, "證照", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.CertificationName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Name" } })
                            @Html.ValidationMessageFor(model => model.CertificationName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CertificationAuthority, "發照機構", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.CertificationAuthority, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Authority" } })
                            @Html.ValidationMessageFor(model => model.CertificationAuthority, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LevelCertification, "等級", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.LevelCertification, Model.ListOfLevel, new { @class = "form-control", @placeholder = "Certification Level" })
                            @Html.ValidationMessageFor(model => model.LevelCertification, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FromYear, "開始", htmlAttributes: new { @class = "control-label" })
                            <div class="input-group date" id="datetimepicker1">
                                @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "From Year" } })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.FromYear, "欄位不得為空", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="button" id="AddCertification" class="btn btn-warning"> <span class="glyphicon glyphicon-file" aria-hidden="true"></span>  新增證照(可新增多個) </button>
                </div> <!-- END PANEL BODY-->
</form>
    </div>
</div>   <!-- END CERTIFICATION FIRST LEVEL-->