@model IEnumerable<DatabaseAccess.ExpensesTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>全部繳費</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container body-content">
        <a href="javascript:window.print()" class="btn btn-primary">列印</a>
        <h3>全部繳費</h3>
        <table class="table table-bordered">
            <tr>
                <th>
                    繳費日期
                </th>
                <th>
                     費用
                </th>
                <th>
                    繳費項目
                </th>
                <th>
                     繳費方式
                </th>
                <th>
                    登入人員
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpensesDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseTypeTable.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserTable.FullName)
                    </td>
                    
                </tr>
            }

        </table>
    </div>
</body>
</html>
