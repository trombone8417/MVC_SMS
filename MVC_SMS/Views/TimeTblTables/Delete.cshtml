@model DatabaseAccess.TimeTblTable

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-danger">確定要刪除嗎?</h3>

<div>
    <h4>課程時間</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            開始
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            結束
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            星期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>

        <dt>
            狀態
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            課程
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassSubjectTable.Name)
        </dd>

        <dt>
            教師
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StaffTable.Name)
        </dd>

        <dt>
            登入人員
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTable.FullName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" value="刪除" class="btn btn-danger" />
    @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
</div>
    }
</div>
