@model IEnumerable<DatabaseAccess.ClassTable>

@{
    ViewBag.Title = "Class's";
}

<p>
    @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">全部班級</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            班級
                        </th>
                        <th>
                            啟用
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("編輯", "Edit", new { id = item.ClassID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("內容", "Details", new { id = item.ClassID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("刪除", "Delete", new { id = item.ClassID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
