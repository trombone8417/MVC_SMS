@model DatabaseAccess.ClassTable

@{
    ViewBag.Title = "Class";
}
<div>
    <h4>全部班級</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            班級
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            啟用
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "編輯", new { id = Model.ClassID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
</p>
