@model DatabaseAccess.UserTable

@{
    ViewBag.Title = "User";
}

<h3 class="text-danger">確定要刪除嗎?</h3>
<div>
    <h4>使用者</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            真實姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            帳號名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            聯絡方式
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNo)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt>
            地址
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            使用者角色
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTypeTable.TypeName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="刪除" class="btn btn-danger" /> 
    @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
</div>
    }
</div>
