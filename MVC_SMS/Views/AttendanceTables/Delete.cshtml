@model DatabaseAccess.AttendanceTable

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-danger">確定要刪除嗎?</h3>
<div>
    <h4>學生出勤</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            年度
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentTable.SessionTable.Name)
        </dd>

        <dt>
            日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendDate)
        </dd>

        <dt>
            時間
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendTime)
        </dd>

        <dt>
            姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentTable.Name)
        </dd>

        <dt>
            班級
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassTable.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-danger" />
            @Html.ActionLink("回主頁", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
